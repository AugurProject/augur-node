{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "sourceMap": true,
    "watch": false,
    "declaration": true,
    "declarationDir": "definitions",
    "strictNullChecks": true,
    "alwaysStrict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "outDir": "build",
    "rootDir": "src",
    "typeRoots": [
      "@types",
      "./@types",
      "node_modules/@types"
    ]
  },
  "include": [
    "src/**/*"
  ]
}
